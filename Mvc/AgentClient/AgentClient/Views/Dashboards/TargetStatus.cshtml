@model IEnumerable<AgentClient.ViewModel.TargetVM>

@{
    ViewData["Title"] = "TargetStatus";
}

<h1>TargetStatus</h1>
@Html.ActionLink("General", "General") |
@Html.ActionLink("Agent Status", "AgentStatus")

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.locationX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.locationY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                    <img src="@item.Image" alt="Agent image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.locationX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.locationY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    setInterval(() => window.location.href = 'https://localhost:7014/Dashboards/TargetStatus', 3000)
</script>